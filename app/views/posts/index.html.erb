<h1>Banker Meeting Notes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Bank</th>
      <th>Key Takeaways</th>
      <th>Next Steps</th>
      <th>Companies</th>
      <th>Added by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.date %></td>
        <td><%= post.bank.name %></td>
        <td><%= post.takeaways %></td>
        <td><%= post.nextsteps %></td>
        <% post.companies.each do |company| %>
          <td><%= company.name %></td>
        <% end %>
        <td><%= post.user.first_name %> <%= post.user.last_name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

